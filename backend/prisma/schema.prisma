generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  name          String
  email         String     @unique
  passwordHash  String?
  age           Int?
  weightKg      Float?
  heightCm      Float?
  healthGoal    String?
  activityLevel String?
  activities    Activity[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Activity {
  id             String    @id @default(uuid())
  title          String
  durationMinutes Int
  tags           String[]
  completedAt    DateTime?
  calories       Float?
  intensity      String?
  userId         String
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt      DateTime  @default(now())
}
